{
  "extends": "@mtobdvlb/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
